@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-4">
    <h1>Restaurant Operations</h1>
    <p>Streamline your restaurant management with our comprehensive suite of tools.</p>
</div>

<div class="row">
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Tables</h5>
                <p class="card-text">Manage floor plan and table assignments</p>
                <a href="@Url.Action("Index", "Tables")" class="btn btn-primary">Manage Tables</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Menu</h5>
                <p class="card-text">Edit menu items and categories</p>
                <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">View Menu</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Inventory</h5>
                <p class="card-text">Track ingredients and supplies</p>
                <a href="@Url.Action("Index", "Inventory")" class="btn btn-success">Check Inventory</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Schedule</h5>
                <p class="card-text">Manage staff shifts and time off</p>
                <a href="@Url.Action("Index", "Schedule")" class="btn btn-warning">View Schedule</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Restaurant Map</h5>
                <p class="card-text">View location and get directions</p>
                <a href="@Url.Action("Map", "Home")" class="btn btn-info">View Map</a>
            </div>
        </div>
    </div>
</div>
